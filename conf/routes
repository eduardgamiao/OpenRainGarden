# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             controllers.Application.index()
GET     /register                     controllers.Application.registerMenu()
GET     /register/rain-garden         controllers.Application.newRainGarden()
POST    /register/rain-garden         controllers.Application.postRainGardenRegister(isNew: Boolean)
GET     /edit/rain-garden/:id         controllers.Application.manageRainGarden(id: Long)
GET     /register/rain-barrel         controllers.Application.newRainBarrel()
POST    /register/rain-barrel         controllers.Application.postRainBarrelRegister(isNew: Boolean)
GET     /edit/rain-barrel/:id         controllers.Application.manageRainBarrel(id: Long)
GET     /register/permeable-pavers    controllers.Application.newPermeablePavers()
POST    /register/permeable-pavers    controllers.Application.postPermeablePaversRegister(isNew: Boolean)
GET     /edit/permeable-pavers/:id    controllers.Application.managePermeablePavers(id: Long)
GET     /login                        controllers.Application.login(target: String)
POST    /login                        controllers.Application.postLogin(target: String)
GET     /login/passwordRecovery       controllers.Application.passwordRecovery()
POST    /login/passwordRecovery       controllers.Application.postPasswordRecovery()
GET     /signup                       controllers.Application.signup()
POST    /signup                       controllers.Application.postSignUp()
GET     /signup/thankyou/:id          controllers.Application.thankYou(id: Long)
GET     /confirm/send                 controllers.Application.emailConfirmSend()
GET     /confirm/:id/:hash            controllers.Application.emailConfirm(id: Long, hash: String)            
GET     /view/rain-garden/:id         controllers.Application.viewGarden(id: Long)
POST    /view/rain-garden/:id         controllers.Application.postGardenComment(id: Long, uri: String)
GET     /delete/rain-garden/:id       controllers.Application.deleteGarden(id: Long)
GET     /view/rain-barrel/:id         controllers.Application.viewBarrel(id: Long)
POST    /view/rain-barrel/:id         controllers.Application.postBarrelComment(id: Long, uri: String)
GET     /delete/rain-barrel/:id       controllers.Application.deleteBarrel(id: Long)
GET     /view/permeable-pavers/:id    controllers.Application.viewPaver(id: Long)
POST    /view/permeable-pavers/:id    controllers.Application.postPaverComment(id: Long, uri: String)
GET     /delete/permeable-pavers/:id  controllers.Application.deletePaver(id: Long)
GET     /logout                       controllers.Application.logout()
GET     /learnmore                    controllers.Application.learnmore()
GET     /gallery/rain-garden          controllers.Application.gardengallery()
GET     /gallery/rain-barrel          controllers.Application.barrelgallery()
GET     /gallery/permeable-paver      controllers.Application.pavergallery()
GET     /map                          controllers.Application.map()
GET     /profile/:id                  controllers.Application.profile(id: Long)
GET     /image/garden/:id             controllers.Application.retrieveGardenImage(id: Long)
GET     /image/barrel/:id             controllers.Application.retrieveBarrelImage(id: Long)
GET     /image/paver/:id              controllers.Application.retrievePaverImage(id: Long)
GET     /edit/profile                 controllers.Application.editProfile()
POST    /profile/edit                 controllers.Application.postEditProfile()
GET	    /error						            controllers.Application.errorReport(err:String)
GET     /adminpanel				            controllers.Application.adminPanel()
GET     /adminpanel/editindexcontent  controllers.Application.editIndexContentFormData()
POST    /adminpanel/editindexcontent  controllers.Application.postIndexContentFormData()
GET 	  /image/index                  controllers.Application.retrieveHomeBannerImage()
GET     /adminpanel/editresource/:find/:id  controllers.Application.editResource(find: String, id: Long)
POST    /adminpanel/postEditResource/:find  controllers.Application.postEditResource(find: String)
GET     /adminpanel/deleteresourc/:id       controllers.Application.deleteResource(id: Long)
GET     /adminpanel/newindexblock     controllers.Application.newIndexBlock()
GET     /adminpanel/editindexblock/:id      controllers.Application.editIndexBlock(id: Long)
POST    /adminpanel/postindexblock/          controllers.Application.postEditIndexBlock(isNew: Boolean)
GET     /image/resource/:id           controllers.Application.retrieveResourceImage(id: Long)
GET     /register/plant               controllers.Application.newPlant()
POST    /register/plant               controllers.Application.postPlantRegistration(isNew: Boolean)
GET     /edit/plant/:plantName        controllers.Application.managePlant(plantName: String)
GET     /view/plant                   controllers.Application.viewPlants()
GET     /image/plant/:name            controllers.Application.retrievePlantImage(name: String)
GET     /delete/plant/:id             controllers.Application.deletePlant(id: Long)
GET     /view/all                     controllers.Application.viewSolutions()
GET     /switch/rain-garden/:id       controllers.Application.switchGardenStatus(id: Long, url: String)
GET     /switch/rain-barrel/:id       controllers.Application.switchBarrelStatus(id: Long, url: String)
GET     /switch/permeable-pavers/:id  controllers.Application.switchPaverStatus(id: Long, url: String)
GET     /export/rain-garden           controllers.Export.exportRainGarden()
GET     /export/rain-barrel           controllers.Export.exportRainBarrel()
GET     /export/permeable-pavers      controllers.Export.exportPermeablePavers()
GET     /delete/comment/:id           controllers.Application.deleteComment(id: Long)
GET     /image/index-content/:id      controllers.Application.retrieveIndexContentImage(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
